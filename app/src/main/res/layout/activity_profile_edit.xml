<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.komoritakeshi.myapp1.ProfileEditActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/profImageEditButton"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="profile_image_edit_Btn"
            >
        </ImageButton>

        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="プロフィール画像設定(必須)"
            android:id="@+id/profimage_edit_label"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            >
        </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="名前(必須)"
            android:id="@+id/name_label"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        </TextView>

        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/name_field"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        </EditText>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="性別"></TextView>

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="年齢"></TextView>

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="場所"></TextView>

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:entries="@array/gender_list"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/age_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:entries="@array/age_list"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/region_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:entries="@array/region_list"
                android:spinnerMode="dialog" />

        </LinearLayout>


        <TextView
            android:id="@+id/biography_label"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="自己紹介"
            >
        </TextView>

        <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/bio_field"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            >
        </EditText>

        <Button
            android:id="@+id/profileSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="saveBtnClick"
            android:layout_marginLeft="20dp"
            android:text="Profile Save" />

        </LinearLayout>



</android.support.constraint.ConstraintLayout>
