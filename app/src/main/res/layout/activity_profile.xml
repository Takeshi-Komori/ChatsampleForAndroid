<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.komoritakeshi.myapp1.ProfileActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/profImageView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:background="@color/colorPrimaryDark"
            >
        </ImageView>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="未設定"
                android:id="@+id/name_prof"
                android:layout_marginBottom="10dp"
                >
            </TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="未設定 / 歳"
                android:id="@+id/gender_age_prof"
                android:layout_marginBottom="10dp"
                >
            </TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="〜〜地方"
                android:id="@+id/region_prof"
                android:layout_marginBottom="10dp"
                >
            </TextView>
        </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="自己紹介"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />
        <TextView
            android:id="@+id/biography_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="よろしくお願いします！"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/profileEditBtn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="myProfEditBtnClick"
            android:text="Profile Edit"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
